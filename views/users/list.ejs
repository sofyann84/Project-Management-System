<!DOCTYPE html>
<html>

<head>
    <title>Dasrboard Users</title>
    <!-- <link rel="stylesheet" href=""> -->
    <% include ../partials/head %>

</head>

<body>
    <header>
        <% include ../partials/navbar %>
    </header>

    <!-- form filter -->
    <div class="container" style="margin-top: 20px">
        <h1 style="font-family:Georgia, 'Times New Roman', Times, serif">Dasrboard Users</h1>
        <hr>
        <div class="container" style="margin-top: 20px ">
            <div class="card bg-light mb-3" style="font-family: initial;">
                <div class="card-header text-white bg-dark mb-3">
                    <h2 style="font-family:Georgia, 'Times New Roman', Times, serif">Filters</h2>
                </div>
                <div class="card-body">
                    <form method="GET" id="filterForm">
                        <input type="hidden" name="page" value="1">
                        <div class="row">
                            <div class="col" style="margin-left: 20px;">
                                <div class="custom-control custom-checkbox mb-3" style="margin-top: 7px;">
                                    <input class="custom-control-input" type="checkbox" id="id" name="checkId">
                                    <label class="custom-control-label" for="id">
                                        ID
                                    </label>
                                </div>
                            </div>
                            <div class="col-10">
                                <div class="form-group" style="margin-right: 20px;">
                                    <input type="text" class="form-control" id="id" placeholder="ID" name="id">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col" style="margin-left: 20px;">
                                <div class="custom-control custom-checkbox mb-3" style="margin-top: 7px;">
                                    <input class="custom-control-input" type="checkbox" id="name" name="checkName">
                                    <label class="custom-control-label" for="name">
                                        Name
                                    </label>
                                </div>
                            </div>
                            <div class="col-10">
                                <div class="form-group" style="margin-right: 20px;">
                                    <input type="text" class="form-control" id="name" placeholder="Name" name="name">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col" style="margin-left: 20px;">
                                <div class="custom-control custom-checkbox mb-3" style="margin-top: 7px;">
                                    <input class="custom-control-input" type="checkbox" id="email" name="checkEmail">
                                    <label class="custom-control-label" for="email">
                                        Email
                                    </label>
                                </div>
                            </div>
                            <div class="col-10">
                                <div class="form-group" style="margin-right: 20px;">
                                    <input type="email" class="form-control" id="email" placeholder="Email"
                                        name="email">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col" style="margin-left: 20px" ;>
                                <div class="custom-control custom-checkbox mb-3" style="margin-top: 7px;">
                                    <input class="custom-control-input" type="checkbox" id="position"
                                        name="checkPosition">
                                    <label class="custom-control-label" for="position">
                                        Position
                                    </label>
                                </div>
                            </div>
                            <div class="col-10">
                                <div class="form-group" style="margin-right: 20px;">
                                    <select id="member" class="custom-select custom-select" name="position">
                                        <option selected disabled>Choose the Position ...</option>
                                        <option value="Quality Assurance">Quality Assurance</option>
                                        <option value="Manager">Manager</option>
                                        <option value="Software Developer">Software Developer</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col" style="margin-left: 20px" ;>
                                <div class="custom-control custom-checkbox mb-3" style="margin-top: 7px;">
                                    <input class="custom-control-input" type="checkbox" id="checkType" name="checkType">
                                    <label class="custom-control-label" for="checkType">
                                        Type Job
                                    </label>
                                </div>
                            </div>
                            <div class="col-10">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="type" id="fulltime"
                                        value="Fulltime">
                                    <label class="form-check-label" for="fulltime">
                                        Fulltime
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="type" id="parttime"
                                        value="Parttime">
                                    <label class="form-check-label" for="parttime">
                                        Part-time
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="container" style="margin-left: 20px;">
                            <button type="submit" class="btn btn-outline-dark">Search</button>
                            <a href="/users">
                                <button type="button" class="btn btn-outline-secondary" id="reset">Reset</button>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- option -->
        <div class="card bg-light mb-3" style="font-family: initial;">
            <div class="card-header">


                <div class="container">
                    <form action="" method="POST">
                        <div class="form-group row">
                            <h2 class="col-sm-4" style="font-family:Georgia, 'Times New Roman', Times, serif">Option
                                Columns</h2>
                            <div class="col-sm-2" style="margin-top: 10px;">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="cId" name="cId" value="true"
                                        <%= option.Id ? `checked` : `` %>>
                                    <label class="form-check-label" for="cId">
                                        ID
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="cName" name="cName" value="true"
                                        <%= option.Name ? `checked` : `` %>>
                                    <label class="form-check-label" for="cName">
                                        Name
                                    </label>
                                </div>
                            </div>

                            <div class="col-sm-2" style="margin-top: 10px;">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="cPosition" name="cPosition"
                                        value="true" <%= option.Position ? `checked` : `` %>>
                                    <label class="form-check-label" for="cPosition">
                                        Position
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="cEmail" name="cEmail"
                                        value="true" <%= option.Email ? `checked` : `` %>>
                                    <label class="form-check-label" for="cEmail">
                                        Email
                                    </label>
                                </div>
                            </div>

                            <div class="col-sm-2" style="margin-top: 10px;">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="cType" name="cType" value="true"
                                        <%= option.Type ? `checked` : `` %>>
                                    <label class="form-check-label" for="cType">
                                        Type Job
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="cRole" name="cRole" value="true"
                                        <%= option.Role ? `checked` : `` %>>
                                    <label class="form-check-label" for="cRole">
                                        Role
                                    </label>
                                </div>
                            </div>

                            <div class="col-sm-2" style="margin-top: 10px;">
                                <div class="col-sm-2">
                                    <button class="btn btn-dark btn-sm" type="submit">Apply</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- list table -->
            <div class="card-body">
                <div class="container" style="margin-top: 10px">

                    <table class="table table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th <%= option.Id ? `` : `hidden` %>>User ID</th>
                                <th <%= option.Email ? `` : `hidden` %>>Email</th>
                                <th <%= option.Name ? `` : `hidden` %>>Name</th>
                                <th <%= option.Position ? `` : `hidden` %>>Position</th>
                                <th <%= option.Type ? `` : `hidden` %>>Type Job</th>
                                <th <%= option.Role ? `` : `hidden` %>>Role</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%users.forEach(item =>{%>
                            <tr>
                                <td <%= option.Id ? `` : `hidden` %>><%=item.userid%></td>
                                <td <%= option.Email ? `` : `hidden` %>><%=item.email%></td>
                                <td <%= option.Name ? `` : `hidden` %>><%=item.fullname%></td>
                                <td <%= option.Position ? `` : `hidden` %>><%=item.position%></td>
                                <td <%= option.Type ? `` : `hidden` %>><%=item.typejob%></td>
                                <td <%= option.Role ? `` : `hidden` %>><%=item.role%></td>
                                <td>
                                    <a href="/users/edit/<%=item.userid%>">
                                        <button class="btn btn-outline-success">Edit</button>
                                    </a>
                                    <a href="/users/delete/<%=item.userid%>">
                                        <button class="btn btn-outline-danger"
                                            onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
                                    </a>
                                </td>
                            </tr>
                            <%})%>
                        </tbody>
                    </table>
                </div>
            </div>


            <div class="pagination justify-content-center">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li class="page-item <%= page==1 ? 'disabled' : ''%>">
                            <a class="page-link"
                                href="/users<%= url.replace(`?page=${parseInt(page)}`,`?page=${ parseInt(page) - 1}`)%>">Previous</a>
                        </li>
                        <%for(let i = 1; i <= pages; i++){%>
                        <li class="page-item <%= i == page ? 'active' : ''%>">
                            <a class="page-link"
                                href="/users<%= url.replace( `?page=${parseInt(page)}`,`?page=${i}`)%>"><%= i%></a>
                        </li>
                        <%}%>
                        <li class="page-item <%= page==pages ? 'disabled' : ''%>"><a class="page-link disabled"
                            href="/users<%= url.replace( `?page=${parseInt(page)}`,`?page=${ parseInt(page) + 1}`)%>">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>

            <div class="form-group row" style="margin-left: 20px;">
                <div class="col-sm-10">
                    <a href="/users/add">
                        <button class="btn btn-outline-dark">Add User</button>
                    </a>
                </div>
            </div>
        </div>
    </div>

    </div>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <% include ../partials/footer %>
</body>

</html>